{
  "name": "meta-utility",
  "version": "1.0.0",
  "description": "The utility package created by Iamrealbhuvi",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --config ./jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/captcha781/meta-utility.git"
  },
  "keywords": [ "utils", "meta-utils", "meta" ],
  "author": "iamrealbhuvi",
  "license": "ISC",
  "files": [
    "dist/**/*"
  ],
  "bugs": {
    "url": "https://github.com/captcha781/meta-utility/issues"
  },
  "homepage": "https://github.com/captcha781/meta-utility#readme",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.0.4"
  }
}
